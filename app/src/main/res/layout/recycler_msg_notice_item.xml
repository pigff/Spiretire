<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20">

    <ImageView
        android:id="@+id/iv_msg_notice_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/group_msg_notice_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_msg_notice_item"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_msg_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_80_color_code"/>

        <TextView
            android:id="@+id/tv_dynamic_msg_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="新动态"
            android:textColor="@color/grey_150_color_code"
            android:textSize="12sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_count_msg_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_80_color_code"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/group_msg_notice_item"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_msg_notice_item"
        android:background="@color/grey_212_color_code"/>
</RelativeLayout>