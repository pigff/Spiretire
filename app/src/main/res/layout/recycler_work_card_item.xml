<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_2"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_15"
                android:text="项目申报"
                android:textColor="@color/black_14_color_code"
                android:textSize="20sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_more_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_5"
                android:text="更多"
                android:textColor="@color/red_237_color_code"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:id="@+id/line_first_work_card"
            style="@style/DividingLineStyle"/>

        <LinearLayout
            android:id="@+id/first_work_card_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_first_title_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福清市2016年省科技小巨人领军企业培育名单的通知"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_first_date_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:text="2016-12-16"/>

            <View
                android:id="@+id/line_second_work_card"
                style="@style/DividingLineStyle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_work_card_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_second_title_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福清市2016年省科技小巨人领军企业培育名单的通知"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_second_date_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:text="2016-12-16"/>

            <View
                android:id="@+id/line_third_work_card"
                style="@style/DividingLineStyle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_work_card_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_third_title_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福清市2016年省科技小巨人领军企业培育名单的通知"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_third_date_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:text="2016-12-16"/>

            <View
                android:id="@+id/line_fourth_work_card"
                style="@style/DividingLineStyle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_work_card_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_fourth_title_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福清市2016年省科技小巨人领军企业培育名单的通知"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_fourth_date_work_card_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:text="2016-12-16"/>

            <View
                android:id="@+id/line_fifth_work_card"
                style="@style/DividingLineStyle"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>