<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_office_name_agence_card"
                style="@style/AgenceCardTvStyle"/>

            <View
                style="@style/DividingLineStyle"/>

            <TextView
                android:id="@+id/tv_phone_name_agence_card"
                style="@style/AgenceCardTvStyle"/>

            <View
                style="@style/DividingDashLineStyle"/>

            <TextView
                android:id="@+id/tv_name_agence_card"
                style="@style/AgenceCardTvStyle"/>

            <View
                style="@style/DividingDashLineStyle"/>

            <TextView
                android:id="@+id/tv_email_agence_card"
                style="@style/AgenceCardTvStyle"/>

            <View
                style="@style/DividingDashLineStyle"/>


            <TextView
                android:id="@+id/tv_duty_agence_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:text="科室职能:"
                android:textColor="@color/black_80_color_code"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_duty_des_agence_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:textColor="@color/black_80_color_code"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
