<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four_btn_horizontal_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"/>

        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@color/black"/>

        <Button
            android:id="@+id/four_btn_horizontal_wait"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"/>

        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@color/black"/>

        <Button
            android:id="@+id/four_btn_horizontal_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"/>

        <View
            android:id="@+id/last_line"
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:visibility="gone"/>

        <Button
            android:id="@+id/four_btn_horizontal_finished"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_102_color_code"/>

</LinearLayout>