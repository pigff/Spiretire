<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/comment_group"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/comment_left_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_company_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:ellipsize="end"
                android:ems="40"
                android:maxLines="2"
                android:textColor="@color/black_34_color_code"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/comment_item_img_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/comment_img_group_one"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/comment_img_group_two"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/comment_img_group_three"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_212_color_code"
                android:textSize="10sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/comment_one_img"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        style="@style/DividingLineStyle"/>

</LinearLayout>