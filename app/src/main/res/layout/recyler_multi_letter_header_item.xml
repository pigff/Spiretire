<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_letter_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017福州市科技计划项目"
        android:textColor="@color/black_44_color_code"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_letter_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冠捷科技"
            android:textColor="@color/blue_59_color_code"/>

        <TextView
            android:id="@+id/tv_letter_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="2017-02-16"
            android:textColor="@color/black_160_color_code"/>
    </LinearLayout>

    <View
        style="@style/DividingLineStyle"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_letter_header_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/second"
        android:textColor="@color/black_102_color_code"/>
</LinearLayout>