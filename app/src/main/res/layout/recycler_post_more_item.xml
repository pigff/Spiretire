<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_post_more"
        android:layout_width="@dimen/dp_5"
        android:layout_height="20dp"
        android:background="@color/red_237_color_code"/>

    <TextView
        android:id="@+id/tv_name_post_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:textColor="@color/black_34_color_code"/>

    <TextView
        android:id="@+id/tv_more_post_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="更多..."
        android:textColor="@color/red_237_color_code"
        android:textSize="12sp"/>

</LinearLayout>